@model CrudMercado.Model.Entities.FornecedorEntity


@{
    ViewBag.Title = "Novo fornecedor";
}

<br />
<h2> Adicionar</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Adicionar" asp-controller="Fornecedor" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            
            <input type="submit" value="Adicionar" class="btn btn-primary"/>
        </form>    
    </div>
</div>


<div>
    <a asp-action="ObterTodosFornecedores">Voltar para lista de fornecedores.</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}