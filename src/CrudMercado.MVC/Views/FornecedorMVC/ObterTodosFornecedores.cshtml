@model IEnumerable<CrudMercado.Model.Entities.FornecedorEntity>

@{
    ViewBag.Title = "Lista de fornecedores";
}
<br />

<h2>Lista de fornecedores</h2>
<p></p>
<table class="table">
    <thead>
        <tr>           
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produtos)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produtos)
            </td>
            <td>
                @Html.ActionLink("Editar", "AtualizarFornecedor", new { id = item.Id }) |
                @Html.ActionLink("Deletar", "DeletarFornecedor", new {id = item.Id });
                @Html.ActionLink("TextoDoLink", "ActionName", "ControllerName");
            </td>
        </tr>
    }
    <tr>
        <td>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </td>
    </tr>
</table>